<Window x:Class="RectanglesOnImages.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RectanglesOnImages"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid Margin="10">
        <!--definition-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height ="0.9*"/>
        </Grid.RowDefinitions>
        
        <!--content-->
        <WrapPanel Grid.Column="0" Grid.Row="0" Margin="10" HorizontalAlignment="Center">
            <Button Name="selectImage" Content="Choose Image Background" HorizontalAlignment="Left" Margin="0,0,20,0" Click="SelectImage_Click"/>
            <Button >
                <Rectangle Height="10" Width="20"/>
            </Button>
        </WrapPanel>
        <Grid Grid.Column="0" Grid.Row="1" Name="appCanvas">
            
        </Grid>
    </Grid>
</Window>
